<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.padacn.xmgoing.view.CustomToolBar
            android:id="@+id/common_travel_people_topbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">

        </com.padacn.xmgoing.view.CustomToolBar>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/common_travel_people_rc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/common_travel_people_topbar">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/common_travel_people_bottom_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_47"
        android:layout_alignParentBottom="true"
        android:background="#ffffff"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/common_travel_people_cancel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="#111111"
            android:textSize="@dimen/sp_18" />


        <TextView
            android:id="@+id/common_travel_people_sure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#f8d948"
            android:gravity="center"
            android:text="确定"
            android:textColor="#111111"
            android:textSize="@dimen/sp_18" />

    </LinearLayout>

</LinearLayout>