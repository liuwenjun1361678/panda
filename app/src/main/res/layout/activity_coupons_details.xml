<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.padacn.xmgoing.view.CustomToolBar
        android:id="@+id/coupons_details_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

    </com.padacn.xmgoing.view.CustomToolBar>

    <RelativeLayout
        android:id="@+id/coupons_details_top_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_294"
        android:layout_below="@+id/coupons_details_bar"
        android:background="@mipmap/coupons_details_bg">

        <TextView
            android:id="@+id/coupons_details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dp_13"
            android:text="全平台通用优惠券"
            android:textColor="#ffffff"
            android:textSize="@dimen/sp_16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_210"
            android:layout_below="@+id/coupons_details_title"
            android:layout_marginLeft="@dimen/dp_25"
            android:layout_marginRight="@dimen/dp_25"
            android:layout_marginTop="@dimen/dp_18"
            android:background="#ffffff"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/coupons_details_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_25"
                android:layout_marginRight="@dimen/dp_25"
                android:layout_marginTop="@dimen/dp_18"
                android:orientation="horizontal">

                <View
                    android:layout_width="@dimen/dp_38"
                    android:layout_height="@dimen/dp_1"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/common_text_color_9"></View>

                <TextView
                    android:id="@+id/coupons_details_time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_4"
                    android:layout_marginRight="@dimen/dp_4"
                    android:gravity="center"
                    android:text="使用期限2018.02.02-2018.02.02" />

                <View
                    android:layout_width="@dimen/dp_38"
                    android:layout_height="@dimen/dp_1"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@color/common_text_color_9"></View>


            </LinearLayout>


            <LinearLayout
                android:layout_width="@dimen/dp_169"
                android:layout_height="@dimen/dp_82"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_30"
                android:background="@mipmap/coupons_detail_price_bg"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"

                        android:gravity="center_horizontal"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/coupons_details_price_left"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/dp_2"
                            android:text="@string/moneny_string"
                            android:textColor="#f25a32" />


                        <TextView

                            android:id="@+id/coupons_details_price_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""

                            android:textColor="#f25a32"
                            android:textSize="@dimen/sp_25"
                            android:textStyle="bold" />
                    </LinearLayout>


                    <TextView
                        android:id="@+id/coupons_details_ruduce_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center_horizontal"
                        android:text=""
                        android:textColor="@color/common_text_color_6"
                        android:textSize="@dimen/dp_12" />


                </LinearLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/gain_coupons"
                android:layout_width="@dimen/dp_108"
                android:layout_height="@dimen/dp_38"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/dp_16"
                android:background="@drawable/shape_home_three_filter_button"
                android:gravity="center"
                android:text="立即领取"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/dp_13" />

        </LinearLayout>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_15"
        android:layout_marginRight="@dimen/dp_15"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_19"
            android:gravity="center"
            android:text="使用说明"
            android:textColor="@color/common_text_color_1"
            android:textSize="@dimen/sp_12" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_11"
            android:text="@string/coupons_string_1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_5"
            android:text="@string/coupons_string_2" />

    </LinearLayout>

</LinearLayout>