<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_280"
    android:layout_height="wrap_content"
    android:background="@color/common_ffffff"
    android:orientation="vertical">


    <TextView
        android:id="@+id/dialog_ccommon_contant"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_100"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:gravity="center"
        android:text="@string/login_error"
        android:textSize="@dimen/sp_16" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/dp_10">


        <RelativeLayout
            android:id="@+id/dialog_ccommon_cancel"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_44"
            android:layout_weight="1"
            android:background="@color/common_f0">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="取消"
                android:textColor="@color/common_text_color_1"
                android:textSize="@dimen/sp_12" />


        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/dialog_ccommon_sure"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_44"
            android:layout_weight="1"
            android:background="@drawable/shape_common_button">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="确定"
                android:textColor="@color/common_text_color_1"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
