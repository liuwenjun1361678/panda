<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_44"
    android:background="@drawable/ex_change_button"
    app:contentInsetStart="0dp"
    app:layout_collapseMode="pin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/city_picker_ll"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginBottom="7dp"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/home_top_bar_city"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:gravity="center"
                android:singleLine="true"
                android:text="@string/home_bar_city"
                android:textColor="@color/colorBarText"
                android:textSize="@dimen/sp_14" />

            <ImageView
                android:layout_width="@dimen/dp_13"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_2"
                android:src="@mipmap/home_bar_morecity" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/home_top_bar_search_ll"
            android:layout_width="@dimen/dp_242"
            android:layout_height="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_7"
            android:layout_weight="1"
            android:background="@drawable/shape_seek"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="@dimen/dp_15"
                android:layout_height="@dimen/dp_15"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_14"
                android:src="@mipmap/home_bar_serch" />


            <EditText
                android:id="@+id/home_top_bar_search"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="@dimen/dp_12"
                android:layout_marginRight="@dimen/dp_10"
                android:background="@null"
                android:cursorVisible="true"
                android:drawablePadding="10dp"
                android:focusable="false"
                android:hint="@string/home_bar_hint"
                android:paddingLeft="@dimen/dp_12"
                android:textColor="@color/home_bar_serch"
                android:textSize="@dimen/sp_12" />

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/main_message"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/dp_20"
                android:layout_height="@dimen/dp_20"
                android:layout_centerInParent="true"
                android:layout_marginRight="@dimen/dp_20"
                android:src="@mipmap/home_bar_message" />
        </RelativeLayout>


    </LinearLayout>
</android.support.v7.widget.Toolbar>