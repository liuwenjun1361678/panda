<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="#ffffff"
    app:cardCornerRadius="@dimen/dp_2"
    app:cardElevation="@dimen/dp_2"
    app:cardMaxElevation="@dimen/dp_5"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/item_home_second_bottom_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_140">

            <ImageView
                android:id="@+id/item_home_second_bottom_image"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_140"
                android:src="@mipmap/default_image" />


            <RelativeLayout
                android:id="@+id/item_home_second_bottom_type_rl"
                android:layout_width="@dimen/dp_65"
                android:layout_height="@dimen/dp_19"
                android:background="#fff">

                <TextView
                    android:id="@+id/item_home_second_bottom_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:text=""
                    android:textColor="@color/common_ffffff"
                    android:textSize="@dimen/sp_11" />

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/item_home_second_bottom_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_10"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/common_text_color_1"
            android:textSize="@dimen/sp_14"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_home_second_bottom_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_8"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dp_4"
            android:maxLines="2"
            android:textColor="@color/common_text_color_9"
            android:textSize="@dimen/sp_11" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_24"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginLeft="@dimen/dp_18"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/item_home_second_bottom_recycler"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:nestedScrollingEnabled="false">

            </android.support.v7.widget.RecyclerView>


            <LinearLayout
                android:layout_width="84dp"
                android:layout_height="match_parent"
                android:background="@drawable/shape_home_bottom_price_bg"
                android:gravity="center"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:text="@string/moneny_string"
                        android:textColor="@color/common_text_color_1"
                        android:textSize="@dimen/sp_10" />

                    <TextView
                        android:id="@+id/item_home_second_bottom_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:gravity="center_vertical"
                        android:text="500"
                        android:textColor="@color/common_text_color_1"
                        android:textSize="@dimen/sp_14"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_2"
                        android:gravity="center_vertical"
                        android:text="èµ·"
                        android:textColor="@color/common_text_color_1"
                        android:textSize="@dimen/sp_9" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>