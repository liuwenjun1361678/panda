<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_110"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_marginRight="@dimen/dp_10"
    android:background="@color/common_ffffff"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_86"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_home_three_list_image"
            android:layout_width="@dimen/dp_97"
            android:layout_height="@dimen/dp_86"
            android:scaleType="center"
            android:src="@mipmap/default_image" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10">

            <TextView
                android:id="@+id/item_home_three_list_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:text=""
                android:textColor="#111111"
                android:textSize="@dimen/sp_13" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home_three_label_1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/item_home_three_list_1"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_10"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:background="@color/common_text_color_6"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/home_three_label_2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:gravity="center_vertical"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/item_home_three_list_2"
                    android:layout_width="@dimen/dp_1"
                    android:layout_height="@dimen/dp_10"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:background="@color/common_text_color_6"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_10" />

                <TextView
                    android:id="@+id/home_three_label_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/dp_5"
                    android:text=""
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_10" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="@dimen/dp_5">

                <TextView
                    android:id="@+id/home_three_sale_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="累计156人报名"
                    android:textColor="#666666"
                    android:textSize="@dimen/sp_11" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/moneny_string"
                        android:textColor="#d61f1f"
                        android:textSize="@dimen/sp_11" />


                    <TextView
                        android:id="@+id/home_three_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="198"
                        android:textColor="#d61f1f"
                        android:textSize="@dimen/sp_16" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="起"
                        android:textColor="#111111"
                        android:textSize="@dimen/sp_11" />
                </LinearLayout>

            </RelativeLayout>

        </RelativeLayout>
    </LinearLayout>


</LinearLayout>