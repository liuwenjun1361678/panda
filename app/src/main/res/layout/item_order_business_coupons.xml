<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10">

        <TextView
            android:id="@+id/item_business_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="商家名字"
            android:textColor="#111111" />

        <TextView
            android:id="@+id/item_business_type_top"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/sp_10"
            android:gravity="center_vertical"
            android:text="表七"
            android:textColor="#ef2f2d" />

    </RelativeLayout>


    <LinearLayout

        android:id="@+id/item_business_one_ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_110"
        android:background="#f0f0f0"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_business_one_image"
            android:layout_width="@dimen/dp_90"
            android:layout_height="@dimen/dp_90"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:scaleType="center"
            android:src="@mipmap/default_image" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dp_90"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10">

            <TextView
                android:id="@+id/item_business_one_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:lines="2"
                android:text="111"
                android:textColor="@color/common_text_color_1"
                android:textSize="@dimen/sp_12" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_business_one_tiketype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text=""
                    android:textColor="@color/common_text_color_6"
                    android:textSize="@dimen/sp_11" />


                <TextView
                    android:id="@+id/item_business_one_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_5"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text=""
                    android:textColor="@color/common_text_color_6"
                    android:textSize="@dimen/sp_11" />
            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/item_business_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_34">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_15"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/item_business_people_num"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="@dimen/dp_15"
                android:gravity="center_vertical"
                android:text="共3件商品"
                android:textColor="#111111" />

            <TextView
                android:id="@+id/item_business_type"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="需付：￥"
                android:textColor="#111111" />


            <TextView
                android:id="@+id/item_business_price"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="500"
                android:textColor="#111111" />

        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_34">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/item_business_bottom_left"
                android:layout_width="@dimen/dp_76"
                android:layout_height="@dimen/dp_25"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/dp_10"
                android:gravity="center"
                android:text="取消訂單"
                android:textColor="#111111" />


            <TextView
                android:id="@+id/item_business_bottom_right"
                android:layout_width="@dimen/dp_76"
                android:layout_height="@dimen/dp_25"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="取消訂單"
                android:textColor="#111111" />
        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_15"
        android:background="#F0F0F0"></View>

</LinearLayout>