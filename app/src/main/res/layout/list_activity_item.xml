<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dp_318"
    android:layout_height="wrap_content"

    android:layout_marginRight="@dimen/dp_10"
    android:orientation="vertical">


    <ImageView
        android:id="@+id/recommonProductTop_image"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_132"
        android:scaleType="centerCrop"
        android:src="@mipmap/default_image" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_10"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false">

        <TextView
            android:id="@+id/recommonProductTop_buy_title"
            android:layout_width="@dimen/dp_230"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lineSpacingExtra="@dimen/dp_4"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/common_text_color_1"
            android:textSize="@dimen/sp_13" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_6"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/moneny_string"
                android:textColor="#d61f1f"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/recommonProductTop_buy_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_2"
                android:text=""
                android:textColor="#d61f1f"
                android:textSize="@dimen/sp_14" />
        </LinearLayout>


    </RelativeLayout>

    <TextView
        android:id="@+id/recommonProductTop_buy_nub"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_6"
        android:layout_marginRight="@dimen/dp_6"
        android:layout_marginTop="@dimen/dp_4"
        android:background="@drawable/shape_home_1"
        android:paddingBottom="@dimen/dp_1"
        android:paddingLeft="@dimen/dp_3"
        android:paddingRight="@dimen/dp_3"
        android:paddingTop="@dimen/dp_1"
        android:text="@string/secondkill_word"
        android:textColor="#f09300"
        android:textSize="@dimen/sp_9" />

</LinearLayout>