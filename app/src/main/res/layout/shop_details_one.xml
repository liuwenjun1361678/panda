<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/good_details_one_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:includeFontPadding="false"
                android:lineSpacingExtra="@dimen/dp_4"
                android:maxLines="2"
                android:text="111"
                android:textColor="@color/common_text_color_1"
                android:textSize="@dimen/sp_16"
                android:textStyle="bold" />


            <LinearLayout
                android:id="@+id/good_details_share_ll"
                android:layout_width="@dimen/dp_57"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_4"
                    android:src="@mipmap/travle_detail_share" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_10"
                    android:text="分享"
                    android:textColor="@color/common_text_color_6"
                    android:textSize="@dimen/sp_12" />

            </LinearLayout>
        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_7">

            <TextView
                android:id="@+id/text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/good_details_one_price"
                android:layout_alignParentStart="true"
                android:text="@string/moneny_string"
                android:textColor="@color/common_price_red" />

            <TextView
                android:id="@+id/good_details_one_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_2"
                android:layout_toEndOf="@+id/text"
                android:includeFontPadding="false"
                android:text="111"
                android:textColor="@color/common_price_red"
                android:textSize="@dimen/sp_23" />

            <TextView
                android:id="@+id/good_details_one_preferential"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/dp_10"
                android:layout_toEndOf="@+id/good_details_one_price"
                android:background="@drawable/shape_home_1"
                android:paddingBottom="@dimen/dp_1"
                android:paddingLeft="@dimen/dp_4"
                android:paddingRight="@dimen/dp_4"
                android:paddingTop="@dimen/dp_1"
                android:text="特惠价"
                android:textColor="#f09300"
                android:textSize="@dimen/sp_10" />

            <TextView
                android:id="@+id/good_details_one_number"
                android:layout_width="@dimen/dp_57"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/good_details_one_price"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text=""
                android:textColor="@color/common_text_color_9"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_4"
            android:orientation="horizontal">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格"
                android:textColor="@color/common_text_color_9"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/good_details_one_old_rice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dp_4"
                android:text=""
                android:textColor="@color/common_text_color_9"
                android:textSize="@dimen/sp_12" />
        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_25"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#F7F7F7">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/good_details_security_recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_weight="1"
            android:nestedScrollingEnabled="false">

        </android.support.v7.widget.RecyclerView>


        <RelativeLayout
            android:id="@+id/good_details_security_right"
            android:layout_width="@dimen/dp_40"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:src="@mipmap/good_detail_go_right"
                android:textSize="@dimen/sp_13" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="#cbcbcb"></View>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="@color/common_f0"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_8"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/shop_details_title_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/dp_5"
            android:includeFontPadding="false"
            android:text="可选套餐"
            android:textColor="@color/common_text_color_1"
            android:textSize="@dimen/dp_14" />

        <TextView
            android:id="@+id/ticket_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginBottom="@dimen/dp_1"
            android:includeFontPadding="false"
            android:textColor="#111111"
            android:textSize="@dimen/dp_14" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:layout_marginTop="@dimen/dp_8"
        android:background="@color/common_f0"></View>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/shop_details_two_rc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false">

    </android.support.v7.widget.RecyclerView>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_5"
        android:background="@color/main_line_view"></View>

    <LinearLayout
        android:id="@+id/shop_details_store_coupons_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_18"
            android:layout_marginLeft="@dimen/dp_10"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="@dimen/dp_8"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/shop_details_title_left" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_5"
                android:includeFontPadding="false"
                android:text="店铺优惠券"
                android:textColor="@color/common_text_color_1"
                android:textSize="@dimen/dp_14" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_0_5"
            android:layout_marginTop="@dimen/dp_8"
            android:background="@color/common_f0"></View>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/shop_details_store_coupons_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_10"
            android:nestedScrollingEnabled="false"></android.support.v7.widget.RecyclerView>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_5"
            android:layout_marginTop="@dimen/dp_5"
            android:background="@color/main_line_view"></View>

    </LinearLayout>


</LinearLayout>